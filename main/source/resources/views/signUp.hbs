<div class="d-flex justify-content-center mb-5">
    <div class="card-group mt-5 mb-5">
        <div class="card left-card border-0">
            <div class="card-body m-3">
                <h1 class="card-title fw-bold fs-1">Đăng Ký</h1>
                <p class="card-text mb-5"><small class="text-body-secondary">Vui lòng đăng ký để tiếp tục</small></p>
                <form id="signupForm" action="/" method="post">
                    <div class="mb-2">
                        <label for="inputName" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control mt-0" name="inputName" id="inputName" required>
                        <small id="nameErr" class="form-text text-danger"></small>
                    </div>
                    <div class="mb-2">
                        <label for="inputUsername" class="form-label mb-1">Tên đăng nhập</label>
                        <input type="text" class="form-control mt-0" name="inputUsername" id="inputUsername" required>
                        <small id="usernameErr" class="form-text text-danger"></small>
                    </div>
                    <div class="mb-2">
                        <label for="inputEmail" class="form-label mb-1">Email</label>
                        <input type="email" class="form-control mt-0" name="inputEmail" id="inputEmail" required>
                    </div>
                    <div class="mb-2">
                        <label for="inputPassword" class="form-label mb-1">Mật khẩu</label>
                        <input type="password" class="form-control mt-0" name="inputPassword" id="inputPassword" required>
                    </div>
                    <div class="mb-2">
                        <label for="inputConfirmPassword" class="form-label mb-1">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control mt-0" name="inputConfirmPassword"
                            id="inputConfirmPassword" required>
                        <small id="confirmPwErr" class="form-text text-danger"></small>
                    </div>
                    <div class="d-grid gap-2 col-12 mt-4">
                        <button class="btn btn-outline-dark fs-4" style="height: 4rem" type="submit">Đăng Ký</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="right-card card border-0">
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-8 offset-2">
                        <img class="w-100"
                            src="https://media.discordapp.net/attachments/1176168664987345008/1176953088456798208/loginanimi.png?ex=6570bdfb&is=655e48fb&hm=e4693ff912e14c7a1d637ed4e329351b67a4f04b6073ab6570bed2e593c74a19&=&format=webp&width=583&height=395"
                            alt="">
                    </div>
                </div>                
                <div>Đã có tài khoản? </div>
                <a class="btn btn-outline-light mt-2 fs-4" href="/user/signin" role="button">Đăng nhập</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(() => {
        $('#signupForm').submit(function (e) {
            event.preventDefault();
            //check fullname
            let regex = /[^a-zA-ZÀ-ỹ\s]/;
            $('#nameErr').html(regex.test($('#inputName').val()) ? 'Họ tên chỉ bao gồm các chữ cái' : '');
            //check username
            regex = /[\/\\\[\];|=,+\*\?<>]/;
            $('#usernameErr').html(regex.test($('#inputUsername').val()) ? 'Tên đăng nhập không chứa các kí tự: / \ [ ] ; | = , + * ? < >' : '');
            //check confirmPassword
            $('#confirmPwErr').html(($('#inputPassword').val() != $('#inputConfirmPassword').val()) ? 'Nhập lại mật khẩu không chính xác' : '');

            if ($('#nameErr').html() == '' && $('#usernameErr').html() == '' && $('#confirmPwErr').html() == '') {
                console.log('submit');
                //$('#signupForm').submit();
            }
        });
    })
</script>