<div class="row admin-page">
  <div class="col-2 admin-sidebar shadow">
    {{>sidebar}}
  </div>
  <div class="col-10 admin-content admin-categories">
    <div class="container mt-5">
      <div class="mb-4 d-sm-flex align-items-center justify-content-between">
          <h1 class="h1 mb-0 text-gray-800">Quản lý danh mục</h1>
          <a href="#" class="d-none d-sm-inline-block btn btn-primary bg-primary shadow-sm" style="font-size: 1.75rem;" data-bs-toggle="modal" data-bs-target="#categoryModal"><i class="fa-solid fa-circle-plus"></i> Thêm danh mục mới</a>
      </div>
      <div class="card shadow mb-4 p-4">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Category</th>
              <th scope="col">No. Products</th>
            </tr>
          </thead>
          <tbody>
            {{#each fullCategories}}
            <tr class="pointer" data-bs-toggle="modal" data-bs-target="#categoryModal" data-bs-id="{{_id}}" data-bs-name="{{name}}" data-bs-description="{{description}}" data-bs-parentName="{{parentCategory}}">
              <th scope="row">{{@index}}</th>
              <td>{{fullName}}</td>
              <td>{{productCount}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="categoryModalLabel">Cập nhật thông tin danh mục</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="updateCategory" action="/product/update-product" method="post">
              <div class="mb-3">
                <label for="name" class="col-form-label">Tên danh mục:</label>
                <input type="text" class="form-control" id="name" name="name" au>
              </div>
              <div class="mb-3">
                <label for="parentname" class="col-form-label">Danh mục cha:</label>
                <select class="form-select" id="parentname" name="parentCategory">
                  <option value="" selected>Danh mục gốc</option>
                  {{#each fullCategories}}
                    <option value="{{_id}}">{{fullName}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="mb-3">
                <label for="description" class="col-form-label">Mô tả danh mục:</label>
                <textarea class="form-control" id="description" name="description"></textarea>
              </div>
              <div class="d-none">
                <label for="id" class="col-form-label">ID:</label>
                <input type="text" class="form-control" id="id" name="id">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng cửa sổ</button>
            <button type="submit" formaction="/product/delete-category" formmethod="post" class="btn btn-danger" form="updateCategory">Xóa danh mục</button>
            <button type="submit" class="btn btn-primary bg-primary" id="modalsubmit" form="updateCategory">Cập nhật</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/admin-categorymodal.js"></script>